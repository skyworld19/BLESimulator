<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical"
    tools:context="hyundai.esds.LoginScreen">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:contentDescription="imageView3"
        app:srcCompat="@drawable/splash_connected_logo"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/editText_phoneNumber"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corner_edit_text"
            android:hint="Phone Number"
            android:inputType="text"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/editText_idNumber"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/editText_phoneNumber"
            android:layout_below="@+id/editText_phoneNumber"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner_edit_text"
            android:hint="ID number"
            android:inputType="text"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/editText_idNumber"
            android:layout_below="@+id/editText_idNumber"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner_edit_text"
            android:hint="Password"
            android:inputType="numberPassword"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button_logIn"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_alignTop="@+id/editText_phoneNumber"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/editText_phoneNumber"
            android:background="@drawable/rounded_corner_button"
            android:text="Log In"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/checkBox_AutoLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_logIn"
            android:layout_alignTop="@+id/editText_password"
            android:background="@drawable/rounded_corner"
            android:checked="false"
            android:clickable="true"/>

        <TextView android:id="@+id/auto_login_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkBox_AutoLogIn"
            android:layout_toEndOf="@+id/checkBox_AutoLogIn"
            android:text="Auto\nLogin"
            android:textColor="#000"
            android:typeface="monospace"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
    <Button
        android:layout_width="130dp"
        android:id="@+id/button_registerPassword"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="#fff"
        android:text="Register\nPassword"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/rounded_corner_button"/>
    <Button
        android:id="@+id/button_enrollService"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Enroll\nService"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:typeface="monospace"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/spalsh_hyndai_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="imageView5"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
